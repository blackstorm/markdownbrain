# Caddyfile without on-demand TLS
# Use this when you manage SSL certificates externally (e.g., Cloudflare, nginx, etc.)
# or when running behind a reverse proxy that handles TLS termination

:80 {
	@obsidian path /obsidian/*
	handle @obsidian {
		reverse_proxy mdbrain:9090
	}

	handle {
		reverse_proxy mdbrain:8080
	}
}
