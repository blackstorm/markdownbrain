{
  "name": "markdownbrain-frontend",
  "version": "1.0.0",
  "description": "MarkdownBrain frontend assets",
  "scripts": {
    "build:admin": "npx @tailwindcss/cli@latest -i ./admin.css -o ./resources/public/admin/css/app.css --minify",
    "watch:admin": "npx @tailwindcss/cli@latest -i ./admin.css -o ./resources/public/admin/css/app.css --watch",
    "build:frontend": "npx @tailwindcss/cli@latest -i ./frontend.css -o ./resources/public/frontend/css/frontend.css --minify",
    "watch:frontend": "npx @tailwindcss/cli@latest -i ./frontend.css -o ./resources/public/frontend/css/frontend.css --watch",
    "build": "npm run build:admin && npm run build:frontend",
    "watch": "npm run watch:admin & npm run watch:frontend",
    "setup": "cp node_modules/htmx.org/dist/htmx.min.js resources/public/js/"
  },
  "devDependencies": {
    "@tailwindcss/cli": "latest",
    "@tailwindcss/typography": "^0.5.19",
    "tailwindcss": "latest"
  },
  "dependencies": {
    "htmx.org": "^2.0.4"
  }
}
