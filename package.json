{
  "name": "markdownbrain-frontend",
  "version": "1.0.0",
  "description": "MarkdownBrain frontend assets",
  "scripts": {
    "build:css": "npx @tailwindcss/cli@latest -i ./app.css -o ./resources/public/css/app.css --minify",
    "watch:css": "npx @tailwindcss/cli@latest -i ./app.css -o ./resources/public/css/app.css --watch",
    "setup": "cp node_modules/htmx.org/dist/htmx.min.js resources/public/js/"
  },
  "devDependencies": {
    "@tailwindcss/cli": "latest",
    "daisyui": "latest",
    "tailwindcss": "latest"
  },
  "dependencies": {
    "htmx.org": "^2.0.4"
  }
}
